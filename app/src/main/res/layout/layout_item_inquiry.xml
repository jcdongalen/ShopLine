<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/md_grey_300"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_launcher_round"/>

        <com.pinas.xburner.shopline.Custom.mTextView
            android:id="@+id/tvFullName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Buyer's Name"
            android:textSize="16sp"
            android:textColor="@color/md_black_1000"
            app:setFont="caviar_dreams_regular"
            android:gravity="center_vertical"/>

        <com.pinas.xburner.shopline.Custom.mTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Inquiry"
            android:textColor="@color/colorPrimary"
            app:setFont="caviar_dreams_regular"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_500"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_inquiry"
            android:tint="@color/colorPrimary"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1">

            <com.pinas.xburner.shopline.Custom.mTextView
                android:id="@+id/tvOrderID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:singleLine="true"
                android:maxLines="1"
                android:ems="1"
                android:textColor="@color/md_black_1000"
                android:text="ID001728-121455"
                app:setFont="caviar_dreams_bold"/>

            <com.pinas.xburner.shopline.Custom.mTextView
                android:id="@+id/tvProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:singleLine="true"
                android:maxLines="1"
                android:ems="1"
                android:textColor="@color/md_grey_800"
                android:text="Product's name and description."
                app:setFont="caviar_dreams_bold"
                android:layout_below="@+id/tvOrderID"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">

                <com.pinas.xburner.shopline.Custom.mTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="P "
                    android:textColor="@color/colorPrimary"/>

                <com.pinas.xburner.shopline.Custom.mTextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="00.00"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>

            <com.pinas.xburner.shopline.Custom.mTextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="x1"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>
        
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_500"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="5dp"
        android:orientation="horizontal">

        <com.pinas.xburner.shopline.Custom.mTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount:"
            android:textColor="@color/md_black_1000"
            app:setFont="caviar_dreams_bold"/>

        <com.pinas.xburner.shopline.Custom.mTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:text=" P "
            app:setFont="caviar_dreams_bold"/>

        <com.pinas.xburner.shopline.Custom.mTextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:text="00.00"
            app:setFont="caviar_dreams_bold"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_500"/>

    <com.pinas.xburner.shopline.Custom.mButton
        android:id="@+id/btnConfirm"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Confirm"
        style="@style/mButton"
        android:layout_gravity="end"
        android:layout_margin="5dp"
        android:textAllCaps="false"/>

</LinearLayout>