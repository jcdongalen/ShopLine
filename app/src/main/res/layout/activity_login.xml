<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/md_grey_200"
        android:gravity="bottom"
        android:orientation="vertical"
        tools:context="com.pinas.xburner.shopline.Activity.Login">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@null"
                android:gravity="bottom"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_launcher" />

                <com.pinas.xburner.shopline.Custom.mTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Sign In"
                    android:textColor="@color/colorPrimary"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    app:setFont="grutch_shaded" />

                <com.pinas.xburner.shopline.Custom.mEditText
                    android:id="@+id/etUserName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/selector_edittext"
                    android:hint="Usename or Email"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    app:setFont="comfortaa_light" />

                <com.pinas.xburner.shopline.Custom.mEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/selector_edittext"
                    android:hint="Password"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    app:setFont="comfortaa_light" />

                <com.pinas.xburner.shopline.Custom.mButton
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimary"
                    android:drawableEnd="@android:drawable/ic_lock_idle_lock"
                    android:paddingEnd="10dp"
                    android:paddingStart="20dp"
                    android:text="Next"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    app:setFont="comfortaa_bold" />

                <com.pinas.xburner.shopline.Custom.mTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:text="Or"
                    android:textColor="@color/colorPrimary"
                    app:setFont="comfortaa_bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <com.pinas.xburner.shopline.Custom.mButton
                        android:id="@+id/btnGoogle"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:paddingEnd="10dp"
                        android:paddingStart="20dp"
                        android:text="Google"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        app:setFont="comfortaa_bold" />

                    <com.pinas.xburner.shopline.Custom.mButton
                        android:id="@+id/btnFacebook"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:paddingEnd="10dp"
                        android:paddingStart="20dp"
                        android:text="Facebook"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        app:setFont="comfortaa_bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <com.pinas.xburner.shopline.Custom.mTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:text="Dont have an account?  "
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        app:setFont="comfortaa_bold" />

                    <com.pinas.xburner.shopline.Custom.mTextView
                        android:id="@+id/tvSignUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign Up"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:setFont="black_chancery" />

                </LinearLayout>

            </LinearLayout>

