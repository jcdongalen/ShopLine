<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent" android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:gravity="bottom"
        android:orientation="vertical"
        tools:context="com.pinas.xburner.shopline.Activity.Login">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="5dp"
                app:cardElevation="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:background="@null"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/ic_launcher" />

                    <com.pinas.xburner.shopline.Custom.mTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:text="Sign In"
                        app:setFont="grutch_shaded"/>

                    <com.pinas.xburner.shopline.Custom.mEditText
                        android:id="@+id/etUserName"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/selector_edittext"
                        android:hint="Usename or Email"
                        app:setFont="comfortaa_light"/>

                    <com.pinas.xburner.shopline.Custom.mEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/selector_edittext"
                        android:hint="Password"
                        app:setFont="comfortaa_light"/>

                    <com.pinas.xburner.shopline.Custom.mButton
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/colorPrimary"
                        android:drawableEnd="@android:drawable/ic_lock_idle_lock"
                        android:paddingStart="20dp"
                        android:paddingEnd="10dp"
                        android:textAllCaps="false"
                        android:text="Next"
                        android:textStyle="bold"
                        android:textColor="#FFF"
                        android:textAlignment="textStart"
                        app:setFont="comfortaa_bold"/>

                    <com.pinas.xburner.shopline.Custom.mTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Or"
                        android:layout_gravity="left"
                        android:layout_margin="5dp"
                        android:textColor="@color/colorPrimary"
                        app:setFont="comfortaa_bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <com.pinas.xburner.shopline.Custom.mButton
                            android:id="@+id/btnGoogle"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:paddingStart="20dp"
                            android:paddingEnd="10dp"
                            android:textAllCaps="false"
                            android:text="Google"
                            android:layout_marginEnd="5dp"
                            android:textStyle="bold"
                            android:textColor="#FFF"
                            android:textAlignment="center"
                            app:setFont="comfortaa_bold"/>

                        <com.pinas.xburner.shopline.Custom.mButton
                            android:id="@+id/btnFacebook"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:paddingStart="20dp"
                            android:paddingEnd="10dp"
                            android:textAllCaps="false"
                            android:text="Facebook"
                            android:layout_marginStart="5dp"
                            android:textStyle="bold"
                            android:textColor="#FFF"
                            android:textAlignment="center"
                            app:setFont="comfortaa_bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <com.pinas.xburner.shopline.Custom.mTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/colorPrimary"
                            android:gravity="bottom"
                            android:textSize="12sp"
                            android:text="Dont have an account?  "
                            app:setFont="comfortaa_bold"/>

                        <com.pinas.xburner.shopline.Custom.mTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:text="Sign Up"
                            app:setFont="black_chancery"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
