<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@color/md_black_1000"
        tools:context="com.pinas.xburner.shopline.Activity.Login">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/app_logo"
            android:layout_above="@+id/cvLoginForm"
            android:layout_centerHorizontal="true"/>

        <android.support.v7.widget.CardView
            android:id="@+id/cvLoginForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="3dp"
            app:cardElevation="50dp">

            <LinearLayout
                android:id="@+id/loginForm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="bottom"
                android:orientation="vertical"
                android:padding="15dp">

                <com.pinas.xburner.shopline.Custom.mTextView
                    android:id="@+id/mTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:text="@string/app_name"
                    app:setFont="caviar_dreams_bold"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <com.pinas.xburner.shopline.Custom.mEditText
                        android:id="@+id/etUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Usename or Email"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        app:setFont="caviar_dreams_bold" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <com.pinas.xburner.shopline.Custom.mEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        app:setFont="caviar_dreams_bold" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <com.pinas.xburner.shopline.Custom.mTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:text="Forgot Password?"
                        android:textColor="@color/md_blue_900"
                        android:textSize="12sp"
                        app:setFont="caviar_dreams_bold" />

                    <com.pinas.xburner.shopline.Custom.mTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:text=""
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        app:setFont="caviar_dreams_bold" />

                    <com.pinas.xburner.shopline.Custom.mTextView
                        android:id="@+id/tvSignUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="Sign Me Up! "
                        android:textColor="@color/md_blue_900"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:setFont="caviar_dreams_bold" />

                </LinearLayout>

                <com.pinas.xburner.shopline.Custom.mButton
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/colorPrimary"
                    android:drawableEnd="@android:drawable/ic_lock_idle_lock"
                    android:paddingEnd="10dp"
                    android:paddingStart="20dp"
                    android:text="Sign In"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    app:setFont="caviar_dreams_bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerInParent="true"
                        android:background="@color/cardview_dark_background"/>

                    <com.pinas.xburner.shopline.Custom.mTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="or"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:background="@color/cardview_light_background"
                        android:textColor="@color/colorPrimary"
                        app:setFont="caviar_dreams_bold" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <com.pinas.xburner.shopline.Custom.mButton
                        android:id="@+id/btnGoogle"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:text="Connect with Google"
                        android:layout_marginBottom="10dp"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        app:setFont="caviar_dreams_bold" />

                    <com.pinas.xburner.shopline.Custom.mButton
                        android:id="@+id/btnFacebook"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:text="Connect with Facebook"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        app:setFont="caviar_dreams_bold" />

                </LinearLayout>

            </LinearLayout>

