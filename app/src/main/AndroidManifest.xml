<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pinas.xburner.shopline">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name=".Activity.LoadingScreen"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.Login"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Activity.MainActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Activity.MainActivityCustomer"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Activity.Registration"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Activity.AddInquiry"
            android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>